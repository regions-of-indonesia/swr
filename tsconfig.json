{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
